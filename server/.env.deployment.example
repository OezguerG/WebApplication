# Example environment configuration file for deployment(.env.example)
# Copy this file to ".env" and fill in real values where needed

# Cookies & CORS
COOKIE_NAME=access_token
VERCEL_LINK=https://<your-vercel-project>.vercel.app
CORS_ORIGIN=https://<your-vercel-project>.vercel.app

# Database (MongoDB Atlas connection string)
# Get this from: https://cloud.mongodb.com → Database → Connect → Drivers
DB_CONNECTION_STRING=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<db-name>?retryWrites=true&w=majority
DB_PREFILL=true   # seed initial data

# Auth
# Generate a strong random string, e.g. with `openssl rand -base64 32`
JWT_SECRET=<your-secret-key>
JWT_TTL=30000000  # token lifetime in ms

# HTTPS
USE_SSL=false   # set true if using SSL certs
SSL_KEY_FILE=path/to/key.pem    # only if USE_SSL=true
SSL_CRT_FILE=path/to/cert.pem   # only if USE_SSL=true